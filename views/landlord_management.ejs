<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f5f7fa;
        color: #333;
        display: flex;
        min-height: 100vh;
        overflow-x: hidden;
      }

      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 0.1rem;
        width: 20vw;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: xx-large;
        color: #02a0f6;
      }

      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
        background-color: #f5f7fa;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
        overflow-x: auto;
        display: block;
      }

      th,
      td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #00022e;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
      }

      tr:hover {
        background-color: #f1f1f1;
      }

      .action-form {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        align-items: center;
      }

      .action-form input[type="text"],
      .action-form input[type="email"],
      .action-form select {
        padding: 0.5rem;
        border-radius: 0.5rem;
        border: 1px solid #ccc;
      }

      .action-form button[type="submit"] {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.5rem;
        background-color: #28a745;
        color: white;
        cursor: pointer;
      }

      .action-form button[type="submit"]:hover {
        background-color: #218838;
      }
      .search-input1 {
      margin-right: 1rem;
      margin-top: 5px;
      padding: 0.5rem;
      border-radius: 0.5rem;
      border: 1px solid #ccc;
      width: 80%;
    }
      @media screen and (max-width: 768px) {
        .sidebar {
          left: -60vw;
          width: 60vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }
        .search-input1 {
      margin-right: 1rem;
      margin-top: 5px;
      padding: 0.5rem;
      border-radius: 0.5rem;
      border: 1px solid #ccc;
      width: 60%;
    }
      }

      @media screen and (max-width: 480px) {
        .stats-card {
          width: 100%;
        }
      }
     
    .search-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 10px;
      
    }

    #searchButton {
      background-color: #178733;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 5px;
    }

    #searchButton:hover {
      background-color: #147026;
    }
    
    </style>
  </head>

  <body>
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/admin">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Dashboard
          </a>
        </li>
        <li>
          <a href="/admin/add_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Landlord
          </a>
        </li>
        <li>
          <a href="/admin/add_agent">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Agent
          </a>
        </li>
        <li>
          <a href="/admin/user_management">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-md"
                aria-hidden="true"
                style="color: chartreuse; width: 30px; font-size: x-large"
              ></i>
            </div>
            User Management
          </a>
        </li>
        <li>
          <a href="/admin/delete_user">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete User
          </a>
        </li>
        <li>
          <a href="/admin/admin_delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/admin/help_desk">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-cogs"
                aria-hidden="true"
                style="color: #06cf06; width: 30px; font-size: x-large"
              ></i>
            </div>
            Support Center
          </a>
        </li>
        <li>
          <a href="/admin/replied_queries">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: olive; width: 30px; font-size: x-large"
              ></i>
            </div>
            Replied Queries
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>

    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>

    <!-- Main content area -->
    <div class="main-content">
      <section class="search-section">
        <!-- Search bar and options -->
        <form class="search-form">
          <input
            type="search"
            class="search-input1"
            placeholder="Search for landlord..."
          />
          <!-- Additional search filters/buttons if needed -->
          <button id="searchButton" type="submit">Search</button>
        </form>
      </section>

      <!-- Landlord Management Section -->
      <section class="landlord">
        <h2>Landlord Management</h2>
        <table>
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% landlords.forEach(landlord => { %>
            <tr>
              <td><%= landlord.username %></td>
              <td><%= landlord.email %></td>
              <td><%= landlord.isActive ? "Active" : "Disabled" %></td>
              <td>
                <form
                  class="action-form"
                  action="/admin/edit_landlord/<%= landlord.userId %>"
                  method="POST"
                >
                  <input
                    type="text"
                    name="username"
                    value="<%= landlord.username %>"
                    required
                  />
                  <input
                    type="email"
                    name="email"
                    value="<%= landlord.email %>"
                    required
                  />
                  <select name="status">
                    <option
                      value="true"
                      <%= landlord.isActive ? "selected" : "" %>
                    >
                      Active
                    </option>
                    <option
                      value="false"
                      <%= !landlord.isActive ? "selected" : "" %>
                    >
                      Disabled
                    </option>
                  </select>
                  <button type="submit">Save</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </div>

    <script>
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-60vw" : "0px";
      });

      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0";
          menuIcon.style.display = "none";
        } else {
          sidebar.style.left = "-60vw";
          menuIcon.style.display = "block";
        }
      }

      window.addEventListener("resize", handleResize);
      handleResize();
    </script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.css"
    />
    <style>
      /* Reset default margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      /* Body styles */
      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        display: flex;
      }

      /* Sidebar styles */
      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: width 0.3s ease, left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      /* Hamburger menu icon */
      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: 1.5rem;
        color: #02a0f6;
      }

      /* Main content styles */
      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
        transition: margin-left 0.3s ease;
      }

      /* Media Queries */
      @media screen and (max-width: 768px) {
        .sidebar {
          width: 25vw;
          left: -25vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }

        .sidebar.show {
          left: 0;
        }

        .main-content.shifted {
          margin-left: 25vw;
        }
      }

      /* Card styles */
      .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
      }

      .page-title {
        text-align: center;
        color: green;
        margin-bottom: 20px;
      }

      .card-section {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
      }

      .card {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 10px;
        width: 300px;
        overflow: hidden;
        transition: box-shadow 0.3s ease;
      }

      .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .card-info {
        padding: 15px;
      }

      .card-info h2 {
        margin-bottom: 10px;
      }

      .delete-btn {
        display: inline-block;
        padding: 10px 1.25rem;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
        margin-top: 10px;
      }

      .delete-btn:hover {
        background-color: #c82333;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/admin">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Dashboard
          </a>
        </li>

        <li>
          <a href="/admin/add_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Landlord
          </a>
        </li>
        <li>
          <a href="/admin/add_agent">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Agent
          </a>
        </li>
        <li>
          <a href="/admin/user_management">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-md"
                aria-hidden="true"
                style="color: chartreuse; width: 30px; font-size: x-large"
              ></i>
            </div>
            User Management
          </a>
        </li>
        <li>
          <a href="/admin/delete_user">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete User
          </a>
        </li>
        <li>
          <a href="/admin/admin_delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/admin/help_desk">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-cogs"
                aria-hidden="true"
                style="color: #06cf06; width: 30px; font-size: x-large"
              ></i>
            </div>
            Support Center
          </a>
        </li>
        <li>
          <a href="/admin/replied_queries">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: olive; width: 30px; font-size: x-large"
              ></i>
            </div>
            Replied Queries
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>

    <!-- Menu icon for mobile -->
    <label for="menu-toggle" class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </label>
    <input type="checkbox" id="menu-toggle" style="display: none" />

    <!-- Main content area -->
    <section class="main-content" id="main-content">
      <div class="container">
        <h1 class="page-title">All Hostels</h1>
        <section class="card-section">
          <% if (hostels.length > 0) { %> <% hostels.forEach((hostel) => { %>
          <div class="card">
            <img
              src="/uploads/<%= hostel.images %>"
              alt="<%= hostel.name %> Image"
            />
            <div class="card-info">
              <h2><%= hostel.name %></h2>
              <p>Gender: <%= hostel.gender %></p>
              <p>Location: <%= hostel.location %></p>
              <p>MK<%= hostel.price %></p>
              <a
                href="#"
                class="delete-btn"
                data-hostel-id="<%= hostel.hostelId %>"
                >Delete</a
              >
            </div>
          </div>
          <% }); %> <% } else { %>
          <p>No hostels available.</p>
          <% } %>
        </section>
      </div>
    </section>

    <script>
      const deleteButtons = document.querySelectorAll(".delete-btn");

      deleteButtons.forEach((button) => {
        button.addEventListener("click", async (event) => {
          event.preventDefault();
          const hostelId = button.getAttribute("data-hostel-id");

          try {
            const response = await fetch(
              `/admin/admin_delete_hostel/${hostelId}`,
              {
                method: "DELETE",
              }
            );

            if (response.ok) {
              console.log("Hostel deleted successfully");
              window.location.reload(); // Refresh the page after successful deletion
            } else {
              console.error("Failed to delete hostel");
            }
          } catch (error) {
            console.error("Error:", error);
          }
        });
      });

      document
        .getElementById("menu-icon")
        .addEventListener("click", function () {
          var sidebar = document.getElementById("sidebar");
          var mainContent = document.getElementById("main-content");
          sidebar.classList.toggle("show");
          mainContent.classList.toggle("shifted");
        });
    </script>
  </body>
</html>

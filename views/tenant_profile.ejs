<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <style>
      /* Reset default margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      /* Body styles */
      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        background-image: url("/images/b2.jpg");
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        display: flex;
      }

      /* Sidebar styles */
      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 1rem;
        width: 20vw; /* 20% of viewport width */
        height: 100vh;
        flex: 0 0 auto; /* Do not grow or shrink */
        position: fixed; /* Fixed position */
        top: 0; /* Stick to top */
        left: 0; /* Initially show the sidebar on larger screens */
        overflow-y: auto; /* Allow vertical scrolling */
        transition: left 0.3s ease; /* Add smooth transition */
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      /* Basic styles */
      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      /* Glowing effect */
      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      /* Hamburger menu icon */
      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem; /* Position on the right side */
        cursor: pointer;
        z-index: 999; /* Ensure it's above other content */
        display: none; /* Initially hide on larger screens */
      }

      .menu-icon i {
        font-size: 1.5rem;
        color: #02a0f6;
      }

      /* Main content styles */
      .main-content {
        padding: 2rem;
        margin-left: 20vw; /* Adjusted to accommodate the sidebar width */
        width: 80vw; /* Adjusted to accommodate the sidebar width */
        min-height: 100vh; /* Ensure the content fills the viewport height */
        background-color: rgba(
          255,
          255,
          255,
          0.8
        ); /* Slightly opaque white background */
      }

      .profile-pic {
        margin-bottom: 20px;
        text-align: center;
      }

      .rounded-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 3px solid #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        object-fit: cover;
      }

      .profile-form {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .profile-form label,
      .profile-form input[type="text"] {
        display: block;
        margin-bottom: 1rem;
      }

      .profile-form input[type="text"] {
        width: calc(100% - 20px);
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      .profile-form button[type="submit"] {
        padding: 10px 20px;
        background-color: green;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        display: block;
        width: 100%;
        margin-top: 1rem;
      }

      /* Media Queries */
      @media screen and (max-width: 768px) {
        .sidebar {
          left: -20vw; /* Hide sidebar by default on smaller screens */
        }

        .menu-icon {
          display: block; /* Show the hamburger menu icon */
        }

        .main-content {
          margin-left: 0; /* Remove margin to make content full-width */
          width: 100%; /* Make content full-width */
        }
      }
    </style>
  </head>
  <body>
    <div class="sidebar" id="sidebar">
      <!-- Header -->
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li><a href="/tenant">Home</a></li>
        <li><a href="/tenant/tenant_profile">Profile</a></li>
        <li><a href="/tenant/pending_approval">Pending Approval</a></li>
        <li><a href="/tenant_bookings">Bookings</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
    <!-- Hamburger menu icon -->
    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <div class="main-content">
      <div class="profile-pic">
        <img
          src="/images/profile.jpeg"
          alt="Profile Picture"
          class="rounded-pic"
        />
      </div>
      <div
        style="
          text-align: center;
          color: #333;
          font-size: xx-large;
          font-weight: bolder;
        "
        class="username"
      >
        <% if (username) { %> Username: <%= username %> <% } %>
      </div>
      <h1 style="color: #178733; text-align: center">User Profile</h1>
      <form action="/tenant/tenant_profile" method="POST" class="profile-form">
        <div>
          <label for="fname">First Name</label>
          <input
            type="text"
            id="fname"
            name="fname"
            value="<%= profile ? profile.fname : '' %>"
          />
        </div>
        <div>
          <label for="lname">Last Name</label>
          <input
            type="text"
            id="lname"
            name="lname"
            value="<%= profile ? profile.lname : '' %>"
          />
        </div>
        <div>
          <label for="gender">Gender</label>
          <input
            type="text"
            id="gender"
            name="gender"
            value="<%= profile ? profile.gender : '' %>"
          />
        </div>
        <div>
          <label for="phone">Phone</label>
          <input
            type="text"
            id="phone"
            name="phone"
            value="<%= profile ? profile.phone : '' %>"
          />
        </div>
        <div>
          <label for="university">University</label>
          <input
            type="text"
            id="university"
            name="university"
            value="<%= profile ? profile.university : '' %>"
          />
        </div>
        <button type="submit">Update Profile</button>
      </form>
    </div>
    <script>
      // Get the sidebar and menu icon elements
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      // Toggle sidebar visibility when menu icon is clicked
      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-20vw" : "0px";
      });

      // Handle screen resize
      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0"; // Ensure sidebar is visible
          menuIcon.style.display = "none"; // Hide the menu icon
        } else {
          sidebar.style.left = "-20vw"; // Ensure sidebar is hidden
          menuIcon.style.display = "block"; // Show the menu icon
        }
      }

      // Attach the resize event listener
      window.addEventListener("resize", handleResize);

      // Initial call to handle the current screen size
      handleResize();
    </script>
  </body>
</html>

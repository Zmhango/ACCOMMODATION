<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/landlord_head")%>
  <body>
    <%- include("./partials/landlord_header")%> <%-
    include("./partials/progress-bar") %>
    <div class="notification" id="notification">
      Congratulations! Successfully Logged In
    </div>
    <!-- Main content area -->
    <main class="container">
      <section class="booking-section">
        <!-- Display booked hostels or bookings history -->
        <!-- Example: Cards displaying booked hostels -->
        <div class="card">
          <img src="/images/M1.jpg" alt="Hostel Image" />
          <div class="card-info">
            <h2>Hostel Name</h2>
            <p>Booking Date: DD/MM/YYYY</p>
            <p>Status: Confirmed</p>
          </div>
        </div>
        <!-- More booking cards or booking history -->
      </section>

      <!-- Additional sections: Profile, Feedback, etc. -->
    </main>
    <script>
      // jQuery to show the notification and then hide it after 3 seconds
      $(document).ready(function () {
        var notification = $("#notification");

        // Show the notification
        notification.addClass("show-notification");

        // Hide the notification after 3 seconds
        setTimeout(function () {
          notification.removeClass("show-notification");
        }, 3000); // 3000 milliseconds = 3 seconds
      });
    </script>
    <%- include("./partials/footer")%>
  </body>
</html>

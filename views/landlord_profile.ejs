<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <style>
      /* Reset default margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      /* Body styles */
      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        background-image: url("/images/b2.jpg");
        display: flex;
      }

      /* Sidebar styles */
      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      /* Hamburger menu icon */
      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: 1.5rem;
        color: #02a0f6;
      }

      /* Main content styles */
      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
      }

      .profile-pic {
        margin-bottom: 20px;
        text-align: center;
      }

      .rounded-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 3px solid #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        object-fit: cover;
      }

      .username {
        text-align: center;
        color: aliceblue;
        font-size: xx-large;
        font-weight: bolder;
      }

      .page-title {
        color: chartreuse;
        text-align: center;
        margin-bottom: 2rem;
      }

      .profile-form {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .profile-form label,
      .profile-form input[type="text"] {
        display: block;
        margin-bottom: 1rem;
      }

      .profile-form input[type="text"] {
        width: calc(100% - 20px);
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      .profile-form button[type="submit"] {
        padding: 10px 20px;
        background-color: green;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        display: block;
        width: 100%;
        margin-top: 1rem;
      }

      /* Media Queries */
      @media screen and (max-width: 768px) {
        .sidebar {
          left: -20vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <% include("./partials/progress-bar") %>

    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Home
          </a>
        </li>
        <li>
          <a href="/landlord/add_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-plus-square"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Hostel
          </a>
        </li>
        <li>
          <a href="/landlord/delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: #eb0c0c; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/landlord/confirm_booking_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-check-square"
                aria-hidden="true"
                style="color: #048e04; width: 30px; font-size: x-large"
              ></i>
            </div>
            Approve Booking
          </a>
        </li>
        <li>
          <a href="/landlord/booking_history">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: burlywood; width: 30px; font-size: x-large"
              ></i>
            </div>
            Bookings History
          </a>
        </li>
        <li>
          <a href="/landlord/landlord_profile">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user"
                aria-hidden="true"
                style="color: gold; width: 30px; font-size: x-large"
              ></i>
            </div>
            My Profile
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>

    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>

    <div class="main-content">
      <div class="profile-pic">
        <img
          src="/images/profile.jpeg"
          alt="Profile Picture"
          class="rounded-pic"
        />
      </div>

      <div class="username">
        <% if (username) { %> Username: <%= username %> <% } %>
      </div>

      <h1 class="page-title">User Profile</h1>

      <form
        action="/landlord/landlord_profile"
        method="POST"
        class="profile-form"
      >
        <div>
          <label for="fname">First Name</label>
          <input
            type="text"
            id="fname"
            name="fname"
            value="<%= profile ? profile.fname : '' %>"
          />
        </div>
        <div>
          <label for="lname">Last Name</label>
          <input
            type="text"
            id="lname"
            name="lname"
            value="<%= profile ? profile.lname : '' %>"
          />
        </div>
        <div>
          <label for="phone">Phone</label>
          <input
            type="text"
            id="phone"
            name="phone"
            value="<%= profile ? profile.phone : '' %>"
          />
        </div>

        <button type="submit">Update Profile</button>
      </form>
    </div>

    <script>
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-20vw" : "0px";
      });

      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0";
          menuIcon.style.display = "none";
        } else {
          sidebar.style.left = "-20vw";
          menuIcon.style.display = "block";
        }
      }

      window.addEventListener("resize", handleResize);
      handleResize();
    </script>
  </body>
</html>

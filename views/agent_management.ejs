<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      /* Include your existing styles here */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: white;
        color: #333;
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        display: flex;
      }

      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: 1.5rem;
        color: #02a0f6;
      }

      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
      }

      .search-section {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
      }

      .search-form {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .search-input {
        flex: 1;
        padding: 0.8rem;
        border-radius: 5px;
        border: 1px solid #07f9f5;
      }

      .search-button {
        background-color: #178733;
        color: #fff;
        padding: 0.8rem 1.2rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .search-button:hover {
        background-color: #147026;
      }

      .agent-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .agent-card {
        width: calc(33.333% - 1rem);
        box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
        border-radius: 0.8rem;
        overflow: hidden;
        transition: transform 0.3s ease;
        background-color: #fff;
      }

      .agent-card:hover {
        transform: translateY(-0.5rem);
      }

      .agent-card img {
        width: 100%;
        height: 12rem;
        object-fit: cover;
      }

      .agent-info {
        padding: 1.2rem;
      }

      .agent-info h2 {
        margin-bottom: 0.8rem;
      }

      .agent-info p {
        font-size: 0.875rem;
        margin-bottom: 0.8rem;
      }

      .agent-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
      }

      .agent-actions button {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .edit-button {
        background-color: #007bff;
        color: #fff;
      }

      .edit-button:hover {
        background-color: #0056b3;
      }

      .delete-button {
        background-color: #dc3545;
        color: #fff;
      }

      .delete-button:hover {
        background-color: #c82333;
      }

      @media screen and (max-width: 768px) {
        .sidebar {
          left: -20vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }

        .agent-card {
          width: calc(50% - 1rem);
        }
      }

      @media screen and (max-width: 480px) {
        .agent-card {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <%- include("./partials/progress-bar") %>
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/admin">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Dashboard
          </a>
        </li>
        <li>
          <a href="/admin/add_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Landlord
          </a>
        </li>
        <li>
          <a href="/admin/add_agent">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Agent
          </a>
        </li>
        <li>
          <a href="/admin/user_management">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-md"
                aria-hidden="true"
                style="color: chartreuse; width: 30px; font-size: x-large"
              ></i>
            </div>
            User Management
          </a>
        </li>
        <li>
          <a href="/admin/delete_user">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete User
          </a>
        </li>
        <li>
          <a href="/admin/admin_delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/admin/help_desk">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-cogs"
                aria-hidden="true"
                style="color: #06cf06; width: 30px; font-size: x-large"
              ></i>
            </div>
            Help Desk
          </a>
        </li>
        <li>
          <a href="/admin/replied_queries">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: olive; width: 30px; font-size: x-large"
              ></i>
            </div>
            Replied Queries
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>
    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <!-- Main content area -->
    <div class="main-content">
      <section class="search-section">
        <!-- Search bar and options -->
        <form class="search-form" onsubmit="searchAgents(event)">
          <input
            class="search-input"
            type="text"
            placeholder="Search for agents..."
          />
          <!-- Additional search filters/buttons if needed -->
          <button class="search-button" type="submit">Search</button>
        </form>
      </section>

      <section class="agent-list">
        <!-- Agent cards will be dynamically populated here -->
        <!-- Example of static agent card -->
        <% agents.forEach(agent => { %>
        <div class="agent-card">
          <% if (agent.profile_photo &&
          !agent.profile_photo.startsWith('/images')) { %>
          <img src="/uploads/<%= agent.profile_photo %>" alt="Profile Photo" />
          <% } else { %>
          <img src="/images/profile2.png" alt="Profile Photo" />
          <% } %>
          <div class="agent-info">
            <h2><%= agent.first_name %> <%= agent.surname %></h2>
            <p>Email: <%= agent.email_address %></p>
            <p>Phone: <%= agent.phone_number %></p>
            <div class="agent-actions">
              <button
                class="edit-button"
                onclick="editAgent('<%= agent.id %>')"
              >
                Edit
              </button>
              <button
                class="delete-button"
                onclick="deleteAgent('<%= agent.id %>')"
              >
                Delete
              </button>
            </div>
          </div>
        </div>

        <% }) %>
      </section>
    </div>

    <script>
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-20vw" : "0px";
      });

      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0";
          menuIcon.style.display = "none";
        } else {
          sidebar.style.left = "-20vw";
          menuIcon.style.display = "block";
        }
      }

      window.addEventListener("resize", handleResize);
      handleResize();

      // Function to redirect to edit agent page
      function editAgent(agentId) {
        window.location.href = `/admin/edit_agent/${agentId}`;
      }

      function deleteAgent(agentId) {
        if (confirm("Are you sure you want to delete this agent?")) {
          fetch(`/admin/delete_agent/${agentId}`, {
            method: "DELETE",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                window.location.reload();
              } else {
                alert("Error deleting agent");
              }
            })
            .catch((error) => {
              console.error("Error deleting agent:", error);
              alert("Error deleting agent");
            });
        }
      }
    </script>
  </body>
</html>

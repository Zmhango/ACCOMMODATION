<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f5f7fa;
        color: #333;
        display: flex;
      }

      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 0.1rem;
        width: 20vw;
        height: 100%;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: xx-large;
        color: #02a0f6;
      }

      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
        background-color: #f5f7fa;
      }

      .stats-section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
      }

      .stats-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
        padding: 1rem;
        width: calc(25% - 1rem);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
      }

      .stats-card:hover {
        transform: translateY(-0.5rem);
      }

      .stats-card h2 {
        margin: 0;
        font-size: 1.5rem;
      }

      .stats-card .icon {
        font-size: 2rem;
        color: #007bff;
        margin-bottom: 1rem;
      }

      .search-section {
        margin-bottom: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .search-input1 {
        margin-right: 1rem;
        padding: 0.8rem;
        border-radius: 5px;
        border: 1px solid #07f9f5;
        width: 48%;
        margin-top: 5px;
      }

      #searchButton {
        background-color: #178733;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 5px;
      }

      #searchButton:hover {
        background-color: #147026;
      }

      .recent-activity,
      .reports {
        margin-bottom: 2rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #00022e;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
      }

      tr:hover {
        background-color: #f1f1f1;
      }

      .chart-container {
        width: 100%;
        margin-bottom: 2rem;
      }

      @media screen and (max-width: 768px) {
        .sidebar {
          left: -20vw;
          width: 60vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }

        .stats-card {
          width: calc(50% - 1rem);
        }
      }

      @media screen and (max-width: 480px) {
        .stats-card {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <%- include("./partials/progress-bar") %>
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/admin">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Dashboard
          </a>
        </li>
        <li>
          <a href="/admin/add_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Landlord
          </a>
        </li>
        <li>
          <a href="/admin/add_agent">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Agent
          </a>
        </li>
        <li>
          <a href="/admin/user_management">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-md"
                aria-hidden="true"
                style="color: chartreuse; width: 30px; font-size: x-large"
              ></i>
            </div>
            User Management
          </a>
        </li>
        <li>
          <a href="/admin/delete_user">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete User
          </a>
        </li>
        <li>
          <a href="/admin/admin_delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/admin/help_desk">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-cogs"
                aria-hidden="true"
                style="color: #06cf06; width: 30px; font-size: x-large"
              ></i>
            </div>
            Support Center
          </a>
        </li>
        <li>
          <a href="/admin/replied_queries">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: olive; width: 30px; font-size: x-large"
              ></i>
            </div>
            Replied Queries
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>

    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>

    <!-- Main content area -->
    <div class="main-content">
      <!-- Statistics section -->
      <section class="stats-section">
        <div class="stats-card">
          <div class="icon"><i class="fa fa-users"></i></div>
          <h2>Active Tenants</h2>
          <p id="tenantCount"><%= tenantCount %></p>
        </div>
        <div class="stats-card">
          <div class="icon"><i class="fa fa-home"></i></div>
          <h2>Properties</h2>
          <p id="propertyCount"><%= propertyCount %></p>
        </div>
        <div class="stats-card">
          <div class="icon"><i class="fa fa-user"></i></div>
          <h2>Landlords</h2>
          <p id="landlordCount"><%= landlordCount %></p>
        </div>
        <div class="stats-card">
          <div class="icon"><i class="fa fa-user-circle-o"></i></div>
          <h2>Agents</h2>
          <p id="agentCount"><%= agentCount %></p>
        </div>
      </section>

      <!-- Search section -->
      <section class="search-section">
        <form class="search-form">
          <input
            type="text"
            class="search-input1"
            placeholder="Search for hostels..."
          />
          <button id="searchButton" type="submit">Search</button>
        </form>
      </section>

      <!-- Recent activity section -->
      <section class="recent-activity">
        <h2>Recent Activity</h2>
        <table>
          <thead>
            <tr>
              <th>Activity</th>
              <th>Description</th>
              <th>Date</th>
              <th>Time</th>
              <!-- Added column header -->
            </tr>
          </thead>
          <tbody>
            <% activities.forEach(activity => { %>
            <tr>
              <td><%= activity.activity %></td>
              <td><%= activity.description %></td>
              <td><%= new Date(activity.created_at).toLocaleDateString() %></td>
              <td><%= new Date(activity.created_at).toLocaleTimeString() %></td>
              <!-- Added time display -->
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>

      <!-- Date Range Form for Downloading/Printing Activity Logs -->
      <section class="reports">
        <h2>Download Activity Logs</h2>
        <form id="activity-log-form">
          <label for="startDate">Start Date:</label>
          <input type="date" id="startDate" name="startDate" required />

          <label for="endDate">End Date:</label>
          <input type="date" id="endDate" name="endDate" required />

          <button type="submit" id="downloadButton">Download PDF</button>
          <button type="button" onclick="printActivityLogs()">
            Print Activity Logs
          </button>
        </form>
      </section>

      <!-- Activity Logs Container -->
      <div id="activity-logs">
        <!-- Activity logs will be dynamically loaded here based on date range -->
      </div>

      <!-- Reports section -->
      <section class="reports">
        <h2>Reports</h2>
        <div class="chart-container">
          <canvas id="registrationChart"></canvas>
        </div>
      </section>
    </div>

    <!-- Include jsPDF library for generating PDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>

    <script>
      document
        .getElementById("activity-log-form")
        .addEventListener("submit", async function (event) {
          event.preventDefault();

          const startDate = document.getElementById("startDate").value;
          const endDate = document.getElementById("endDate").value;

          try {
            const response = await fetch(
              `/admin/activities?startDate=${startDate}&endDate=${endDate}`
            );
            const data = await response.json();

            // Generate and download the PDF
            generatePDF(data.activities);
          } catch (error) {
            console.error("Error fetching activities:", error);
          }
        });

      function printActivityLogs() {
        window.print();
      }

      function generatePDF(activities) {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        doc.setFontSize(20);
        doc.text("Activity Logs Report", 10, 20);

        doc.setFontSize(12);
        doc.text(
          `Date Range: ${document.getElementById("startDate").value} to ${
            document.getElementById("endDate").value
          }`,
          10,
          30
        );

        doc.setFontSize(10);
        let y = 40;

        activities.forEach((activity, index) => {
          doc.text(
            `${index + 1}. ${activity.activity} - ${
              activity.description
            } - ${new Date(activity.created_at).toLocaleString()}`,
            10,
            y
          );
          y += 10;
        });

        doc.save("activity_logs.pdf");
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-60vw" : "0px";
      });

      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0";
          menuIcon.style.display = "none";
        } else {
          sidebar.style.left = "-60vw";
          menuIcon.style.display = "block";
        }
      }

      window.addEventListener("resize", handleResize);
      handleResize();

      // Registration Chart
      const ctx = document.getElementById("registrationChart").getContext("2d");
      const tenantRegistrations = <%- JSON.stringify(tenantRegistrations) %>;
      const landlordRegistrations = <%- JSON.stringify(landlordRegistrations) %>;

      const months = tenantRegistrations.map(entry => entry.month);
      const tenantCounts = tenantRegistrations.map(entry => entry.count);
      const landlordCounts = landlordRegistrations.map(entry => entry.count);

      const registrationChart = new Chart(ctx, {
        type: "bar",
        data: {
          labels: months,
          datasets: [
            {
              label: "New Tenants",
              data: tenantCounts,
              backgroundColor: "rgba(75, 192, 192, 0.2)",
              borderColor: "rgba(75, 192, 192, 1)",
              borderWidth: 1,
            },
            {
              label: "New Landlords",
              data: landlordCounts,
              backgroundColor: "rgba(153, 102, 255, 0.2)",
              borderColor: "rgba(153, 102, 255, 1)",
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    </script>
  </body>
</html>

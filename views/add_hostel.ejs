<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      /* Reset default margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      /* Body styles */
      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        background-image: url("/images/b2.jpg");
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        display: flex;
      }

      /* Sidebar styles */
      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      /* Hamburger menu icon */
      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: 1.5rem;
        color: #02a0f6;
      }

      /* Main content styles */
      .main-content {
        padding: 2rem;
        margin-left: 29vw;
        width: 60vw;
        min-height: 100vh;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 30px;
      }

      .search-section {
        margin-bottom: 2rem;
      }

      .add-hostel-form {
        margin-top: 2rem;
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .add-hostel-form h2 {
        margin-bottom: 1rem;
        font-size: 1.8rem;
        color: #333;
      }

      .add-hostel-form label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
        color: #555;
      }

      .add-hostel-form input[type="text"],
      .add-hostel-form input[type="number"],
      .add-hostel-form textarea,
      .add-hostel-form select {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 1rem;
      }

      .add-hostel-form textarea {
        min-height: 100px;
      }

      .add-hostel-form button {
        padding: 0.7rem 1.5rem;
        background-color: #178733;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .add-hostel-form button:hover {
        background-color: #147026;
      }

      .input-group {
        display: flex;
      }

      .input-group-addon {
        padding: 0.5rem;
        border-right: none;
        border-radius: 5px 0 0 5px;
      }

      .input-group input {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 0 5px 5px 0;
      }

      /* Media Queries */
      @media screen and (max-width: 768px) {
        .sidebar {
          left: -20vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li><a href="/landlord">Home</a></li>
        <li><a href="/landlord/add_hostel">List Hostel</a></li>
        <li><a href="/landlord/delete_hostel">Delete Hostel</a></li>
        <li>
          <a href="/landlord/confirm_booking_landlord">Confirm Booked Hostel</a>
        </li>
        <li><a href="/landlord/booking_history">Booking History</a></li>
        <li><a href="/landlord/landlord_profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <div class="main-content">
      <section class="search-section">
        <form
          class="add-hostel-form"
          method="POST"
          action="/landlord/add_hostel"
          enctype="multipart/form-data"
        >
          <h2 class="h2style">Add New Hostel</h2>
          <label for="name">Hostel Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Enter hostel name"
            required
          />

          <label for="location">Location:</label>
          <input
            type="text"
            id="location"
            name="location"
            placeholder="Hostel address e.g Chitawira"
            required
          />

          <label for="price">Price per Month:</label>
          <div class="input-group">
            <span class="input-group-addon">MK</span>
            <input
              type="number"
              id="price"
              name="price"
              placeholder="Enter price"
              required
            />
          </div>

          <label for="availability">Availability:</label>
          <select id="availability" name="availability" required>
            <option value="Available">Available</option>
            <option value="Booked">Not Available</option>
          </select>

          <label for="gender">Hostel Gender:</label>
          <select id="gender" name="gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Male & Female">Mixed</option>
            <option value="Family">Family</option>
          </select>

          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="you@example.gmail.com"
            required
          />

          <label for="location">Contact:</label>
          <input
            type="text"
            id="phone"
            name="phone"
            placeholder="Phone"
            required
          />

          <label for="description">Description:</label>
          <textarea
            id="description"
            name="description"
            placeholder="Enter hostel description"
          ></textarea>

          <label for="image">Hostel Image:</label>
          <input
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
          />

          <button type="submit">Add Hostel</button>
        </form>
      </section>
    </div>
    <script>
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-20vw" : "0px";
      });

      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0";
          menuIcon.style.display = "none";
        } else {
          sidebar.style.left = "-20vw";
          menuIcon.style.display = "block";
        }
      }

      window.addEventListener("resize", handleResize);
      handleResize();
    </script>
  </body>
</html>

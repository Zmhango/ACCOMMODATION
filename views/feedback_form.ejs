<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <style>
      /* Reset default margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      /* Body styles */
      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        background-image: url("/images/b2.jpg");
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        display: flex;
      }

      /* Sidebar styles */
      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 0.1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      /* Basic styles */
      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      /* Glowing effect */
      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      /* Hamburger menu icon */
      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: xx-large;
        color: #02a0f6;
      }

      /* Main content styles */
      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
        background-color: rgba(255, 255, 255, 0.8);
      }

      .container {
        margin-top: 2rem;
      }

      .feedback-title-container {
        text-align: center;
        margin-bottom: 2rem;
      }

      .page-title {
        color: #178733;
        font-size: 2rem;
        font-weight: bold;
      }

      /* Feedback form styles */
      .feedback-form {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 2rem;
      }

      .feedback-form h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
        color: #178733;
      }

      .feedback-form .form-group {
        margin-bottom: 1rem;
      }

      .feedback-form label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
      }

      .feedback-form input,
      .feedback-form textarea {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
      }

      .feedback-form textarea {
        resize: vertical;
        min-height: 100px;
      }

      .feedback-form button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 0.75rem 1.5rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-size: 1rem;
        font-weight: bold;
      }

      .feedback-form button:hover {
        background-color: #0056b3;
      }

      .star-rating {
        display: flex;
        direction: row-reverse;
        font-size: 2rem;
        justify-content: center;
        margin: 1rem 0;
      }

      .star-rating input {
        display: none;
      }

      .star-rating label {
        cursor: pointer;
        color: #ddd;
        transition: color 0.3s ease;
      }

      .star-rating input:checked ~ label,
      .star-rating input:checked ~ label ~ label {
        color: #f39c12;
      }

      .star-rating label:hover,
      .star-rating label:hover ~ label {
        color: #f39c12;
      }

      /* Media Queries */
      @media screen and (max-width: 768px) {
        .sidebar {
          left: -60vw;
          width: 60vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <div class="sidebar" id="sidebar">
      <!-- Header -->
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/tenant">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Home
          </a>
        </li>
        <li>
          <a href="/tenant/tenant_profile">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user"
                aria-hidden="true"
                style="color: olivedrab; width: 30px; font-size: x-large"
              ></i>
            </div>
            My Profile
          </a>
        </li>
        <li>
          <a href="/tenant/pending_approval">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-check-square"
                aria-hidden="true"
                style="color: #048e04; width: 30px; font-size: x-large"
              ></i>
            </div>
            Pending Approval
          </a>
        </li>
        <li>
          <a href="/tenant_bookings">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: burlywood; width: 30px; font-size: x-large"
              ></i>
            </div>
            Bookings History
          </a>
        </li>
        <li>
          <a href="/agent">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-address-card"
                aria-hidden="true"
                style="color: #07f9f5; width: 30px; font-size: x-large"
              ></i>
            </div>
            House Agents
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>
    <!-- Hamburger menu icon -->
    <div class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <div class="main-content">
      <div class="container">
        <div class="feedback-title-container">
          <h1 class="page-title">Provide Feedback</h1>
        </div>
        <div class="feedback-form">
          <h2>Feedback Form</h2>
          <form action="/tenant/feedback" method="POST">
            <input type="hidden" name="bookingId" value="<%= bookingId %>" />
            <div class="form-group">
              <label for="comment">Feedback:</label>
              <textarea id="comment" name="comment"></textarea>
            </div>
            <div class="form-group">
              <label for="rating">Rating:</label>
              <div class="star-rating">
                <input type="radio" id="star5" name="rating" value="5" />
                <label for="star5" title="5 stars">
                  <i class="fa fa-star"></i>
                </label>
                <input type="radio" id="star4" name="rating" value="4" />
                <label for="star4" title="4 stars">
                  <i class="fa fa-star"></i>
                </label>
                <input type="radio" id="star3" name="rating" value="3" />
                <label for="star3" title="3 stars">
                  <i class="fa fa-star"></i>
                </label>
                <input type="radio" id="star2" name="rating" value="2" />
                <label for="star2" title="2 stars">
                  <i class="fa fa-star"></i>
                </label>
                <input type="radio" id="star1" name="rating" value="1" />
                <label for="star1" title="1 star">
                  <i class="fa fa-star"></i>
                </label>
              </div>
            </div>
            <div class="form-group">
              <button type="submit">
                <i class="fa fa-paper-plane"></i> Submit Feedback
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script>
      const sidebar = document.getElementById("sidebar");
      const menuIcon = document.getElementById("menu-icon");

      menuIcon.addEventListener("click", () => {
        sidebar.style.left = sidebar.style.left === "0px" ? "-60vw" : "0px";
      });

      function handleResize() {
        if (window.innerWidth > 768) {
          sidebar.style.left = "0";
          menuIcon.style.display = "none";
        } else {
          sidebar.style.left = "-60vw";
          menuIcon.style.display = "block";
        }
      }

      window.addEventListener("resize", handleResize);
      handleResize();
    </script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      font-size: 16px;
      line-height: 1.6;
      background-color: #f0f2f5;
      color: #333;
    }

    .sidebar {
      background-color: #00022e;
      color: #fff;
      padding: 1rem;
      width: 20vw;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      overflow-y: auto;
      transition: left 0.3s ease;
    }

    .logo {
      font-size: 0.5rem;
      margin-bottom: 1rem;
      width: 5rem;
      height: auto;
      border-radius: 40px;
    }

    .nav-links {
      list-style: none;
      margin-bottom: 1rem;
    }

    .nav-links li {
      margin-left: 0;
    }

    .nav-links a {
      display: block;
      padding: 0.5rem 1rem;
      text-decoration: none;
      color: #fff;
      position: relative;
      font-weight: bold;
    }

    .nav-links a::before {
      content: "";
      position: absolute;
      width: calc(100% - 2rem);
      height: 2px;
      bottom: -5px;
      left: 1rem;
      background-color: #fff;
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
    }

    .nav-links a:hover::before {
      visibility: visible;
      transform: scaleX(1);
    }

    .menu-icon {
      position: fixed;
      top: 1rem;
      right: 1rem;
      cursor: pointer;
      z-index: 999;
      display: none;
    }

    .menu-icon i {
      font-size: 1.5rem;
      color: #02a0f6;
    }

    .main-content {
      padding: 2rem;
      margin-left: 20vw;
      width: 80vw;
      min-height: 100vh;
    }

    .search-section {
      margin-bottom: 2rem;
    }

    .search-input1 {
      margin-right: 1rem;
      padding: 0.8rem;
      border-radius: 5px;
      border: 1px solid #07f9f5;
      width: 48%;
      margin-top: 5px;
    }

    .search-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 10px;
    }

    #searchButton {
      background-color: #178733;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 5px;
    }

    #searchButton:hover {
      background-color: #147026;
    }

    .card-section {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: space-between;
    }

    .card {
      width: calc(33.333% - 1rem);
      box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
      border-radius: 0.8rem;
      overflow: hidden;
      transition: transform 0.3s ease;
      background-color: #fff;
    }

    .card:hover {
      transform: translateY(-0.5rem);
    }

    .card img {
      width: 100%;
      height: 12rem;
      object-fit: cover;
    }

    .card-info {
      padding: 1.2rem;
    }

    .card-info h2 {
      margin-bottom: 0.8rem;
    }

    .card-info p {
      font-size: 0.875rem;
      margin-bottom: 0.8rem;
    }

    .card-info a {
      text-decoration: none;
      color: green;
      background-color: #f4f4f4;
      padding: 8px 12px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      float: right;
    }

    .card-info a:hover {
      background-color: #ddd;
    }

    @media screen and (max-width: 768px) {
      .sidebar {
        left: -20vw;
      }

      .menu-icon {
        display: block;
      }

      .main-content {
        margin-left: 0;
        width: 100%;
      }

      .card {
        width: calc(50% - 1rem);
      }
    }

    @media screen and (max-width: 768px) {
      .sidebar {
        width: 25vw;
        left: -25vw;
      }

      .sidebar.active {
        left: 0;
      }

      .main-content {
        margin-left: 0;
        width: 100%;
      }
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
      background-color: #fff;
      box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
      border-radius: 0.8rem;
      overflow: hidden;
    }

    th, td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th{
        color: aliceblue;
    }
    th {
      background-color:#00022e;
      font-weight: bold;
      text-transform: uppercase;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    form {
      display: flex;
      gap: 0.5rem;
    }

    input[type="email"], select {
      padding: 0.5rem;
      border-radius: 0.5rem;
      border: 1px solid #ccc;
      flex: 1;
    }
    
    input[type="text"], select{
        padding: 0.5rem;
      border-radius: 0.5rem;
      border: 1px solid #ccc;
      width: 5.5rem;

    }

    input[type="search"], select{
        padding: 0.5rem;
      border-radius: 0.5rem;
      border: 1px solid #ccc;
      width: 90%;

    }
    button[type="submit"] {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 0.5rem;
      background-color: #28a745;
      color: white;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color: #218838;
    }
 
    .button {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      background-color: #007bff;
      color: #fff;
      transition: background-color 0.3s ease;
    }

    .button:hover {
      background-color: #0056b3;
    }

    .button:focus {
      outline: none;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

  </style>
</head>

<body>
  <%- include("./partials/progress-bar") %>
  <div class="sidebar" id="sidebar">
    <img class="logo" src="/images/logo.jpeg" alt="Logo" />
    <ul class="nav-links">
      <li>
        <a href="/admin">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-dashboard" aria-hidden="true" style="color: #c68417; width: 30px; font-size: x-large"></i>
          </div>
          Dashboard
        </a>
      </li>
      <li>
        <a href="/admin/add_landlord">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-user-plus" aria-hidden="true" style="color: #0da2f1; width: 30px; font-size: x-large"></i>
          </div>
          Add Landlord
        </a>
      </li>
      <li>
        <a href="/admin/add_agent">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-user-plus" aria-hidden="true" style="color: #0da2f1; width: 30px; font-size: x-large"></i>
          </div>
          Add Agent
        </a>
      </li>
      <li>
        <a href="/admin/user_management">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-user-md" aria-hidden="true" style="color: chartreuse; width: 30px; font-size: x-large"></i>
          </div>
          User Management
        </a>
      </li>
      <li>
        <a href="/admin/delete_user">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-trash" aria-hidden="true" style="color: crimson; width: 30px; font-size: x-large"></i>
          </div>
          Delete User
        </a>
      </li>
      <li>
        <a href="/admin/admin_delete_hostel">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-trash-o" aria-hidden="true" style="color: crimson; width: 30px; font-size: x-large"></i>
          </div>
          Delete Hostel
        </a>
      </li>
      <li>
        <a href="/admin/help_desk">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-cogs" aria-hidden="true" style="color: #06cf06; width: 30px; font-size: x-large"></i>
          </div>
          Help Desk
        </a>
      </li>
      <li>
        <a href="/admin/replied_queries">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-history" aria-hidden="true" style="color: olive; width: 30px; font-size: x-large"></i>
          </div>
          Replied Queries
        </a>
      </li>
      <li>
        <a href="/logout">
          <div class="icon" style="display: inline-block; vertical-align: middle">
            <i class="fa fa-sign-out" aria-hidden="true" style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"></i>
          </div>
          Sign-Out
        </a>
      </li>
    </ul>
  </div>
  <div class="menu-icon" id="menu-icon">
    <i class="fa fa-bars"></i>
  </div>
  <!-- Main content area -->
  <div class="main-content">
    <section class="search-section">
      <!-- Search bar and options -->
      <form class="search-form">
        <input type="search" placeholder="Search for tenants..." />
        <!-- Additional search filters/buttons if needed -->
        <button type="submit">Search</button>
      </form>
    </section>

    <!-- Tenant Management Section -->
    <section class="tenant-section">
      <h2>Tenant Management</h2>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tenants.forEach(tenant => { %>
            <tr>
              <td><%= tenant.username %></td>
              <td><%= tenant.email %></td>
              <td><%= tenant.isActive ? 'Active' : 'Disabled' %></td>
              <td>
                <form action="/admin/edit_tenant/<%= tenant.userId %>" method="POST">
                  <input type="text" name="username" value="<%= tenant.username %>" required>
                  <input type="email" name="email" value="<%= tenant.email %>" required>
                  <select name="status">
                    <option value="true" <%= tenant.isActive ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= !tenant.isActive ? 'selected' : '' %>>Disabled</option>
                  </select>
                  <button type="submit">Save</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>

  <script>
    const sidebar = document.getElementById("sidebar");
    const menuIcon = document.getElementById("menu-icon");

    menuIcon.addEventListener("click", () => {
      sidebar.style.left = sidebar.style.left === "0px" ? "-20vw" : "0px";
    });

    function handleResize() {
      if (window.innerWidth > 768) {
        sidebar.style.left = "0";
        menuIcon.style.display = "none";
      } else {
        sidebar.style.left = "-20vw";
        menuIcon.style.display = "block";
      }
    }

    window.addEventListener("resize", handleResize);
    handleResize();
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.css"
    />
    <style>
      /* Reset default margin and padding */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      /* Body styles */
      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        display: flex;
      }

      /* Sidebar styles */
      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 0.1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: width 0.3s ease, left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      /* Hamburger menu icon */
      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: xx-large;
        color: #02a0f6;
      }

      /* Main content styles */
      .main-content {
        padding: 2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
        transition: margin-left 0.3s ease;
      }

      /* Media Queries */
      @media screen and (max-width: 768px) {
        .sidebar {
          width: 60vw;
          left: -60vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }

        .sidebar.show {
          left: 0;
        }

        .main-content.shifted {
          margin-left: 25vw;
        }
      }

      /* Dashboard specific styles */
      .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .dashboard-header h1 {
        font-size: 2rem;
      }

      .btn-primary {
        background-color: #178733;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .btn-primary:hover {
        background-color: #004494;
      }

      /* Content Container */
      .container {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      h1,
      h2 {
        margin-bottom: 20px;
        color: #333;
      }

      /* User Info styles */
      .user-info {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-bottom: 20px;
        background-color: #fff;
        transition: box-shadow 0.3s ease;
        flex-wrap: wrap;
      }

      .user-info:hover {
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.1);
      }

      .user-info span {
        flex: 1 1 auto;
        font-size: 16px;
        color: #333;
        margin-right: 1rem;
      }

      .user-info button {
        flex: 0 0 auto;
      }

      /* Delete button styles */
      button {
        padding: 10px 1.25rem;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #c82333;
      }

      /* Delete button styles within media queries */
      @media screen and (max-width: 600px) {
        button {
          width: 100%;
          margin-top: 10px;
        }
      }

      /* Media Queries for Responsive Design */
      @media screen and (max-width: 480px) {
        .user-info {
          flex-direction: column;
          align-items: flex-start;
          padding: 1.5rem;
          margin-bottom: 1.5rem;
        }

        .user-info span {
          width: 100%;
          margin-bottom: 0.5rem;
        }

        span strong {
          display: block;
        }

        button {
          width: 100%;
          margin-top: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/admin">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Dashboard
          </a>
        </li>

        <li>
          <a href="/admin/add_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Landlord
          </a>
        </li>
        <li>
          <a href="/admin/add_agent">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-plus"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Agent
          </a>
        </li>
        <li>
          <a href="/admin/user_management">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user-md"
                aria-hidden="true"
                style="color: chartreuse; width: 30px; font-size: x-large"
              ></i>
            </div>
            User Management
          </a>
        </li>
        <li>
          <a href="/admin/delete_user">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete User
          </a>
        </li>
        <li>
          <a href="/admin/admin_delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: crimson; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/admin/help_desk">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-cogs"
                aria-hidden="true"
                style="color: #06cf06; width: 30px; font-size: x-large"
              ></i>
            </div>
            Support Center
          </a>
        </li>
        <li>
          <a href="/admin/replied_queries">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: olive; width: 30px; font-size: x-large"
              ></i>
            </div>
            Replied Queries
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>

    <!-- Menu icon for mobile -->
    <label for="menu-toggle" class="menu-icon" id="menu-icon">
      <i class="fa fa-bars"></i>
    </label>
    <input type="checkbox" id="menu-toggle" style="display: none" />

    <!-- Main content area -->
    <section class="main-content" id="main-content">
      <div class="container">
        <h1 style="text-align: center; color: green">Delete Users</h1>

        <!-- Landlords Section -->
        <h2>Landlords</h2>
        <form action="/admin/delete_user" method="POST" class="delete-form">
          <% for (const landlord of landlords) { %>
          <div class="user-info">
            <span><strong>Username:</strong> <%= landlord.username %></span>
            <span><strong>Email :</strong> <%= landlord.email %></span>
            <button type="submit" name="userId" value="<%= landlord.userId %>">
              Delete
            </button>
          </div>
          <% } %>
        </form>

        <!-- Tenants Section -->
        <h2>Tenants</h2>
        <form action="/admin/delete_user" method="POST" class="delete-form">
          <% for (const tenant of tenants) { %>
          <div class="user-info">
            <span><strong>Username:</strong> <%= tenant.username %></span>
            <span><strong>Email:</strong> <%= tenant.email %></span>
            <button type="submit" name="userId" value="<%= tenant.userId %>">
              Delete
            </button>
          </div>
          <% } %>
        </form>
      </div>
    </section>

    <script>
      document
        .getElementById("menu-icon")
        .addEventListener("click", function () {
          var sidebar = document.getElementById("sidebar");
          var mainContent = document.getElementById("main-content");
          sidebar.classList.toggle("show");
          mainContent.classList.toggle("shifted");
        });
    </script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      /* Include your existing styles here */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        font-size: 16px;
        line-height: 1.6;
        background-color: #f7f7f7;
        color: #333;
        background-image: url("/images/b2.jpg");
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        display: flex;
      }

      .sidebar {
        background-color: #00022e;
        color: #fff;
        padding: 0.1rem;
        width: 20vw;
        height: 100vh;
        flex: 0 0 auto;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        transition: left 0.3s ease;
      }

      .logo {
        font-size: 0.5rem;
        margin-bottom: 1rem;
        width: 5rem;
        height: auto;
        border-radius: 40px;
      }
      .logo2 {
        font-size: 0.3rem;
        width: 3rem;
        height: auto;
        border-radius: 100%;
      }

      .nav-links {
        list-style: none;
        margin-bottom: 1rem;
      }

      .nav-links li {
        margin-left: 0;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: #fff;
        position: relative;
        font-weight: bold;
      }

      .nav-links a::before {
        content: "";
        position: absolute;
        width: calc(100% - 2rem);
        height: 2px;
        bottom: -5px;
        left: 1rem;
        background-color: #fff;
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
      }

      .nav-links a:hover::before {
        visibility: visible;
        transform: scaleX(1);
      }

      .menu-icon {
        position: fixed;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        z-index: 999;
        display: none;
      }

      .menu-icon i {
        font-size: xx-large;
        color: #02a0f6;
      }

      .main-content {
        padding: 0.2rem;
        margin-left: 20vw;
        width: 80vw;
        min-height: 100vh;
      }

      .search-section {
        margin-bottom: 2rem;
      }

      .search-input1 {
        margin-right: 1rem;
        padding: 0.8rem;
        border-radius: 5px;
        border: 1px solid #07f9f5;
        width: 48%;
        margin-top: 5px;
      }

      .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
      }

      #searchButton {
        background-color: #178733;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 5px;
      }

      #searchButton:hover {
        background-color: #147026;
      }

      .card-section {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: space-between;
      }

      .card {
        width: calc(33.333% - 1rem);
        box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
        border-radius: 0.8rem;
        overflow: hidden;
        transition: transform 0.3s ease;
        background-color: #fff;
      }

      .card:hover {
        transform: translateY(-0.5rem);
      }

      .card img {
        width: 100%;
        height: 12rem;
        object-fit: cover;
      }

      .card-info {
        padding: 1.2rem;
      }

      .card-info h2 {
        margin-bottom: 0.8rem;
      }

      .card-info p {
        font-size: 0.875rem;
        margin-bottom: 0.8rem;
      }

      .card-info a {
        text-decoration: none;
        color: green;
        background-color: #f4f4f4;
        padding: 8px 12px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        float: right;
      }

      .card-info a:hover {
        background-color: #ddd;
      }

      .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .dashboard-header h1 {
        font-size: 2rem;
      }

      .btn-primary {
        background-color: #178733;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .btn-primary:hover {
        background-color: #004494;
      }

      .overview {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
      }

      .overview .card {
        flex: 1;
        text-align: center;
        padding: 2rem;
        background-color: aliceblue;
        color: black;
        margin-right: 1rem;
      }

      .overview .card:last-child {
        margin-right: 0;
      }

      .listings {
        background-color: aliceblue;
        padding: 1rem;
        border-radius: 0.8rem;
        overflow-x: auto;
      }

      .listings table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
      }

      .listings th,
      .listings td {
        padding: 0.8rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
        color: black;
      }

      .listings th {
        background-color: #00022e;
        color: aliceblue;
      }

      .listings tbody tr:hover {
        background-color: #f4f4f4;
      }

      .listings a {
        color: #00022e;
        text-decoration: none;
      }

      .listings a:hover {
        color: #0056b3;
      }

      .listings .btn {
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .listings .delete-btn {
        background-color: rgb(164, 2, 2);
        color: aliceblue;
        text-decoration: none;
      }
      .delete-button {
        padding: 8px 16px;
        background-color: #980c0c;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        margin-top: 5px;
      }

      .delete-button:hover {
        background-color: #cc0000;
      }

      .listings .delete-btn:hover {
        background-color: #333;
      }

      .listings .edit-btn {
        margin-top: 2px;
        padding: 6px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        color: aliceblue;
        background-color: green;
        text-decoration: none;
      }

      .listings .edit-btn:hover {
        background-color: #333;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      thead {
        background-color: #00022e;
        color: aliceblue;
      }

      th,
      td {
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #ddd;
      }

      .hostel-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        transition: transform 0.3s ease;
      }

      .image-cell {
        text-align: center;
      }

      .hostel-image:hover {
        transform: scale(1.1);
      }
 
  .feedback-section {
    background-color: aliceblue;
    padding: 1rem;
    border-radius: 0.8rem;
    margin-top: 2rem;
  }

  .feedback-cards {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .feedback-card {
    background-color: #fff;
    box-shadow: 0 0.2rem 0.4rem rgba(0, 0, 0, 0.1);
    border-radius: 0.8rem;
    padding: 1rem;
    width: calc(50% - 1rem);
  }

  .feedback-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .user-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 1rem;
  }

  .rating {
    color: gold;
  }

  .rating .fa-star,
  .rating .fa-star-o {
    margin-right: 0.2rem;
  }

  .comment {
  font-style: italic;
  color: #555;
  margin-bottom: 0.5rem;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
}


  .hostel-info {
    color: #333;
  }

  

      @media screen and (max-width: 768px) {
        .sidebar {
          left: -20vw;
          width: 60vw;
        }

        .menu-icon {
          display: block;
        }

        .main-content {
          margin-left: 0;
          width: 100%;
        }

        .card {
          width: calc(50% - 1rem);
        }
        .overview .card {
          flex: 1;
          text-align: center;
          padding: 0.2rem;
          background-color: aliceblue;
          color: black;
          margin-right: 0.1rem;
        }
        .feedback-card {
      width: calc(100% - 1rem);
    }
      }
    </style>
  </head>

  <body>
    <div class="sidebar" id="sidebar">
      <img class="logo" src="/images/logo.jpeg" alt="Logo" />
      <ul class="nav-links">
        <li>
          <a href="/landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-dashboard"
                aria-hidden="true"
                style="color: #c68417; width: 30px; font-size: x-large"
              ></i>
            </div>
            Home
          </a>
        </li>

        <li>
          <a href="/landlord/add_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-plus-square"
                aria-hidden="true"
                style="color: #0da2f1; width: 30px; font-size: x-large"
              ></i>
            </div>
            Add Hostel
          </a>
        </li>
        <li>
          <a href="/landlord/delete_hostel">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-trash-o"
                aria-hidden="true"
                style="color: #eb0c0c; width: 30px; font-size: x-large"
              ></i>
            </div>
            Delete Hostel
          </a>
        </li>
        <li>
          <a href="/landlord/confirm_booking_landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-check-square"
                aria-hidden="true"
                style="color: #048e04; width: 30px; font-size: x-large"
              ></i>
            </div>
            Approve Booking
          </a>
        </li>
        <li>
          <a href="/landlord/booking_history">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-history"
                aria-hidden="true"
                style="color: burlywood; width: 30px; font-size: x-large"
              ></i>
            </div>
            Bookings History
          </a>
        </li>

        <li>
          <a href="/landlord/agent-landlord">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-address-card"
                aria-hidden="true"
                style="color: #07f9f5; width: 30px; font-size: x-large"
              ></i>
            </div>
            House Agents
          </a>
        </li>
        <li>
          <a href="/landlord/landlord_profile">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-user"
                aria-hidden="true"
                style="color: gold; width: 30px; font-size: x-large"
              ></i>
            </div>
            My Profile
          </a>
        </li>
        <li>
          <a href="/logout">
            <div
              class="icon"
              style="display: inline-block; vertical-align: middle"
            >
              <i
                class="fa fa-sign-out"
                aria-hidden="true"
                style="color: rgb(255, 0, 93); width: 30px; font-size: x-large"
              ></i>
            </div>
            Sign-Out
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="menu-icon" id="menu-icon">
    <i class="fa fa-bars"></i>
  </div>
  <div class="main-content">
    <div class="dashboard-header">
      <h1 style="color: aliceblue">Landlord Dashboard</h1>
      <a href="/landlord/add_hostel">
        <button class="btn-primary">Add New Hostel</button>
      </a>
    </div>
    <div class="overview">
      <div class="card">
        <h3>Active Listings</h3>
        <p><%= activeListings %></p>
      </div>
      <div class="card">
        <h3>New Booking Requests</h3>
        <p><%= pendingBookingsCount %></p>
      </div>
      <div class="card">
        <h3>Total Bookings</h3>
        <p><%= totalBookingsCount %></p>
      </div>
    </div>

    <div class="listings">
      <h2 style="color: black">My Listings</h2>
      <table>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Location</th>
            <th>Availability</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="hostelTableBody">
          <% hostels.forEach((hostel) => { %>
            <tr>
              <td class="image-cell">
                <% if (hostel.images) { %>
                  <% const imageUrls = hostel.images.split(','); %>
                  <img src="/uploads/<%= imageUrls[0] %>" alt="<%= hostel.name %> Image" class="hostel-image" />
                <% } else { %>
                  <img src="/images/default.jpg" alt="Default Image" class="hostel-image" />
                <% } %>
              </td>
              <td><%= hostel.name %></td>
              <td><%= hostel.location %></td>
              <td><%= hostel.availability %></td>
              <td>
                <a href="#" class="btn delete-btn" data-hostel-id="<%= hostel.hostelId %>">Delete</a>
                <a href="/landlord/edit_hostel/<%= hostel.hostelId %>">
                  <button class="edit-btn">Edit</button>
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <section class="feedback-section">
      <h2>Feedback from Tenants</h2>
      <% if (feedbacks.length > 0) { %>
        <div class="feedback-cards">
          <% feedbacks.forEach(feedback => { %>
            <div class="feedback-card">
              <div class="feedback-header">
                <div class="user-avatar">
                  <img class="logo2" src="/images/feedback.jpg" alt="Avatar">
                </div>
                <div class="rating">
                  <% for (let i = 0; i < 5; i++) { %>
                    <% if (i < feedback.rating) { %>
                      <i class="fa fa-star"></i>
                    <% } else { %>
                      <i class="fa fa-star-o"></i>
                    <% } %>
                  <% } %>
                </div>
              </div>
              <div class="comment">
                <p>"<%= feedback.comment %>"</p>
              </div>
              <div class="hostel-info">
                <p><strong>Hostel:</strong> <%= feedback.hostelName %></p>
                <p><strong>Tenant:</strong> <%= feedback.tenantUsername %></p>
                <p><strong>Date Submitted:</strong> <%= feedback.date_submitted.toLocaleString() %></p>
              </div>
              <div class="delete-feedback">
                <form action="/delete-feedback/<%= feedback.feedbackId %>" method="POST">
                  <button type="submit" class="delete-button">Delete</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No feedback available yet.</p>
      <% } %>
    </section>
    
  <script>
    const sidebar = document.getElementById("sidebar");
    const menuIcon = document.getElementById("menu-icon");

    menuIcon.addEventListener("click", () => {
      sidebar.style.left = sidebar.style.left === "0px" ? "-60vw" : "0px";
    });

    function handleResize() {
      if (window.innerWidth > 768) {
        sidebar.style.left = "0";
        menuIcon.style.display = "none";
      } else {
        sidebar.style.left = "-60vw";
        menuIcon.style.display = "block";
      }
    }

    window.addEventListener("resize", handleResize);
    handleResize();

    // Event listener for delete buttons
    const deleteButtons = document.querySelectorAll(".delete-btn");

    deleteButtons.forEach((button) => {
      button.addEventListener("click", async (event) => {
        event.preventDefault();

        const hostelId = button.getAttribute("data-hostel-id");
        try {
          const response = await fetch(`/delete_hostel/${hostelId}`, {
            method: "DELETE",
          });

          if (response.ok) {
            console.log("Hostel deleted successfully");
            window.location.reload(); // Refresh the page after successful deletion
          } else {
            console.error("Failed to delete hostel");
          }
        } catch (error) {
          console.error("Error:", error);
        }
      });
    });
  </script>
    
  </body>
</html>
